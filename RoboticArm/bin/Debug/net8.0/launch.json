{
    "name": "Docker .NET Core Worker Service",
    "type": "docker",
    "request": "launch",
    "preLaunchTask": "build",
    "appFolder": "${workspaceFolder}",
    "appProject": "${workspaceFolder}/EventHandlerService.csproj",
    "dockerBuild": {
        "tag": "event-handler-service:dev",
        "dockerfile": "${workspaceFolder}/Dockerfile",
        "context": "${workspaceFolder}",
        "target": "base",
        "pull": true
    },
    "dockerRun": {
        "containerName": "event-handler-service-1",
        "image": "event-handler-service:dev",
        "env": {
            "ASPNETCORE_ENVIRONMENT": "Development"
        },
        "ports": [
            {
                "hostPort": 5000,
                "containerPort": 5000
            }
        ]
    },
    "pipeTransport": {
        "pipeCwd": "${workspaceFolder}",
        "pipeProgram": "docker",
        "pipeArgs": ["exec", "-i", "event-handler-service", "sh", "-c"],
        "debuggerPath": "/vsdbg/vsdbg",
        "quoteArgs": false
    },
    "sourceFileMap": {
        "/app": "${workspaceFolder}"
    }
}